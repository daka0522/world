{
  "compilerOptions": {
    "target": "ESNext", // Target modern browsers
    "module": "ESNext",     // Use standard ES modules
    "outDir": "./dist",  // Output compiled JS to a 'dist' folder
    "rootDir": "./src",  // Assume your .ts files are in a 'src' folder
    "strict": true,      // Enable strict type-checking (recommended, but can cause errors if code isn't strict)
    "strictNullChecks": false,
    "esModuleInterop": true, // Allows default imports from commonjs modules
    "skipLibCheck": true,    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // How modules are found
    "noImplicitAny": true,       // Raise error on expressions and declarations with an implied 'any' type.
    "allowJs": true,             // Allow javascript files to be compiled
  },
  "include": ["src/**/*"], // Which files to compile (adjust if your .ts files are elsewhere)
  "exclude": ["node_modules"]
}